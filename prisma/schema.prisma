generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              String          @id
  email           String          @unique
  name            String?
  visibleRoutes   Json?           // string[] | null; null â†’ DEFAULT_ROUTES
  scheduleEntries ScheduleEntry[]
  foodEntries     FoodEntry[]
  aiAnalysis      AiAnalysis?
}

model ScheduleEntry {
  id        String   @id @default(cuid())
  userId    String
  weekday   Int
  startTime String
  endTime   String
  activity  String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
}

model FoodEntry {
  id          String   @id @default(cuid())
  userId      String
  date        DateTime
  mealType    String
  description String
  feelings    String?
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@unique([userId, date, mealType])
  @@index([userId])
}

model AiAnalysis {
  id             String   @id @default(cuid())
  userId         String   @unique
  recommended    Json
  notRecommended Json
  avoidProducts  Json
  lastEntryDate  DateTime
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}
